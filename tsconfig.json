{
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "target": "es5",
    "lib": ["es6", "dom"],
    "baseUrl": "client",
    "paths": {
      "common/*": ["common/*"],
      "features/*": ["features/*"],
      "assets/*": ["assets/*"],
      "lib": ["lib"],
      "api": ["api"],
      "ui": ["ui"]
    },
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true
  },
  "exclude": ["node_modules", ".storybook", "dist"]
}
